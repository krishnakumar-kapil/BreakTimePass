{
  "name": "BreakTimePass",
  "version": "1.0.2",
  "description": "Keeps track of how long you spend on websites like facebook,etc. and shows the number of times you visit one!",
  "permissions": [
    "history", "storage","tabs"
  ],
  "manifest_version": 2,
  "background": {
    "scripts": ["js/timerStore.js"],
    "persistent": false
  },
  "icons": {
           "48": "Assets/logo48.png",
          "128": "Assets/logo128.png" },
  "browser_action": {
    "default_popup": "index.html"
  },
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'"
  
}
